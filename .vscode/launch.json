    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Chrome against localhost, with sourcemaps",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:8080",
            "sourceMaps": true,
            "webRoot": "${workspaceRoot}",
            "trace": true,
            "sourceMapPathOverrides": {
                "webpack:///../*": "${webRoot}/../*",
                "webpack:///./~/*": "${webRoot}/node_modules/*",
                "webpack:///./*": "${webRoot}/*",
                "webpack:///*": "*",
                "webpack:///src/*": "${webRoot}/*",
                "meteor://ðŸ’»app/*": "${webRoot}/*"
            }
        }
    ]
}